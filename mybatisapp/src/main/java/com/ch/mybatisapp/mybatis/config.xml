<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 이 설정은 MyBatis에게 "DB에서 언더스코어로 구분된 이름이 넘어오면, Java에서는 이걸 카멜케이스로 자동 변환해서 찾아 넣어라"라고 지시하는 것입니다. -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="com.mysql.cj.jdbc.Driver" />
				<property name="url"
					value="jdbc:mysql://localhost:3306/java" />
				<property name="username" value="servlet" />
				<property name="password" value="1234" />
			</dataSource>
		</environment>
	</environments>

	<!-- 자바 코드 대신, 쿼리문을 작성해놓은 파일을 가리켜 매퍼라 하며, 매퍼의 위치는 아래의 mappers 태그의 자식 태그로 
		등록해야 함 -->
	<mappers>
		<mapper resource="com/ch/mybatisapp/mybatis/NewsMapper.xml" />
		<mapper resource="com/ch/mybatisapp/mybatis/BoardMapper.xml" />
	</mappers>
</configuration>